SUMMARY="A CD audio extraction program"
DESCRIPTION="UltraEncode is a CD audio extraction program. It allows quick and \
easy extraction and compression of CD audio tracks."
APP="UltraEncode"
instDir=$appsDir/$APP
HOMEPAGE="https://github.com/HaikuArchives/$APP"
COPYRIGHT="1998-1999 mediapede, inc.
	1998 Robert Alto
	1997-1999 Peter Urbanec"
LICENSE="GNU GPL v3"
REVISION="1"
srcGitRev="a11c3cfbe4d44208e8869fa614fe1d523cc2f9b1"
SOURCE_URI="$HOMEPAGE/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="960267f99c6ffc978672bf3f3b0b843f99d92d98b833eb2e835d5ce9cc30bd47"
SOURCE_DIR="$APP-$srcGitRev"

ARCHITECTURES="x86_gcc2 !x86_64"

PROVIDES="
	ultraencode = $portVersion
	app:$APP = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:g++
	cmd:make
	"

defineDebugInfoPackage ultraencode \
	$instDir/$APP

BUILD()
{
	make OBJ_DIR=objects $jobArgs
}

INSTALL()
{
	mkdir -p $instDir $instDir/Sounds
	cp objects/$APP $instDir
	cp -r Sounds $instDir

	addAppDeskbarSymlink $instDir/$APP
}
